            "description": "Working block found successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "block123"
                    },
                    "userId": {
                      "type": "string",
                      "example": "user123"
                    },
                    "startTime": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2025-06-04T15:47:43.913Z"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
